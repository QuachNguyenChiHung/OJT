{
  "name": "ojt-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK Infrastructure for OJT E-commerce Platform - Serverless Architecture",
  "main": "bin/infrastructure.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "synth": "cdk synth",
    "deploy": "cdk deploy --all --require-approval never",
    "deploy:core": "cdk deploy OJT-NetworkStack OJT-StorageStack OJT-AuthStack OJT-DatabaseStack --require-approval never",
    "deploy:api": "cdk deploy OJT-ApiStack --require-approval never",
    "deploy:frontend": "cdk deploy OJT-FrontendStack --require-approval never",
    "deploy:monitoring": "cdk deploy OJT-MonitoringStack --require-approval never",
    "destroy": "cdk destroy --all",
    "diff": "cdk diff"
  },
  "keywords": [
    "aws",
    "cdk",
    "serverless",
    "lambda",
    "api-gateway",
    "cognito",
    "rds",
    "s3",
    "cloudfront"
  ],
  "author": "OJT Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "aws-cdk": "^2.118.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.118.0",
    "constructs": "^10.3.0",
    "dotenv": "^16.3.1"
  }
}
